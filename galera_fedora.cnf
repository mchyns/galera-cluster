# Galera Configuration for Fedora Laptop
# IP: 192.168.100.120
# Simpan ke: /etc/my.cnf.d/galera.cnf

[mysqld]
# Galera Settings
binlog_format=ROW
default_storage_engine=InnoDB
innodb_autoinc_lock_mode=2
bind-address=0.0.0.0

# Galera Provider Configuration
wsrep_on=ON
wsrep_provider=/usr/lib64/galera-4/libgalera_smm.so

# Galera Cluster Configuration (2 nodes)
wsrep_cluster_name="galera_cluster"
wsrep_cluster_address="gcomm://192.168.100.120,192.168.100.116"

# Galera Node Configuration - FEDORA
wsrep_node_address="192.168.100.120"
wsrep_node_name="fedora"
wsrep_sst_method=rsync

# Performance
wsrep_slave_threads=4
